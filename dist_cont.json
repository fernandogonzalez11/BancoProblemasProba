    "introducción": [
        {
            "enunciado": "Dada la función de densidad de probabilidad (PDF) de una variable aleatoria continua X:",
            "funcion_densidad": {
                "fX(x)": {
                    "definicion": [
                        "ax \t\t si 1 ≤ x ≤ 7",
                        "1/x² \t si x ≥ 7",
                        "0 \t\t en otros casos"
                    ]
                }
            },
            "problema": "Calcular P[1 ≤ X ≤ 10]",
            "solucion_correcta": "\\boxed{0.9}",
            "conceptos_clave": [
                "Distribuciones continuas",
                "Función de densidad de probabilidad",
                "Normalización",
                "Cálculo de probabilidades"
            ],
            "dificultad": "intermedio",
            "explicacion": {
                "paso_1": {
                    "descripcion": "Encontrar el valor de 'a' que normaliza la PDF",
                    "calculo": [
                        "∫_{-∞}^{∞} fX(x) dx = 1",
                        "∫_{1}^{7} ax dx + ∫_{7}^{∞} 1/x² dx = 1",
                        "[a(x²/2)]_{1}^{7} + [-1/x]_{7}^{∞} = 1",
                        "a(49/2 - 1/2) + (0 + 1/7) = 1",
                        "24a + 1/7 = 1 → 24a = 6/7 → a = 1/28"
                    ]
                },
                "paso_2": {
                    "descripcion": "Calcular P[1 ≤ X ≤ 10]",
                    "calculo": [
                        "P[1 ≤ X ≤ 10] = ∫_{1}^{7} (x/28) dx + ∫_{7}^{10} 1/x² dx",
                        "= [(x²/56)]_{1}^{7} + [-1/x]_{7}^{10}",
                        "= (49/56 - 1/56) + (-1/10 + 1/7)",
                        "= (48/56) + (3/70) = (6/7) + (3/70) = 60/70 + 3/70 = 63/70 = 0.9"
                    ]
                },
                "verificacion": {
                    "normalizacion": "∫_{1}^{7} (x/28) dx = 0.857, ∫_{7}^{∞} 1/x² dx ≈ 0.143 → Suma ≈ 1 (OK)",
                    "probabilidad": "El resultado 0.9 es consistente con la PDF normalizada"
                }
            }
        }
    ],
    "uniforme": [
        {
            "enunciado": "Los buses pasan cada 15 minutos (uniformemente). Fernando espera aleatoriamente durante 30 días. ¿Probabilidad de que en más de la mitad de los días espere >8 minutos?",
