            "conceptos_clave": [
                "Distribución uniforme",
                "Distribución binomial",
                "Probabilidad exacta"
            ],
            "dificultad": "intermedio",
            "explicacion": {
                "paso_1": {
                    "descripcion": "Probabilidad diaria de esperar >8 minutos",
                    "modelo_uniforme": {
                        "rango": "Tiempo de espera X ~ U(0, 15) minutos",
                        "calculo": "P(X > 8) = (15 - 8)/15 = 7/15 ≈ 0.4667"
                    }
                },
                "paso_2": {
                    "descripcion": "Modelar días exitosos en 30 días",
                    "modelo_binomial": {
                        "parametros": "Y ~ Binomial(n=30, p=7/15)",
                        "objetivo": "P(Y > 15) = 1 - P(Y ≤ 15)"
                    }
                },
                "paso_3": {
                    "calculo_exacto": {
                        "metodo": "Usando la función de distribución binomial acumulada",
                        "formula": "P(Y > 15) = 1 - P(Y ≤ 15)",
                        "resultado": "≈ 0.29 (29%)",
                        "implementacion": "En R: 1 - pbinom(15, 30, 7/15) ≈ 0.29"
                    }
                },
                "interpretacion": {
                    "resultado": "Hay un 29% de probabilidad de que Fernando espere más de 8 minutos en más de la mitad de los días",
                    "analisis": "Aunque la probabilidad diaria es menor al 50%, la variabilidad en 30 días permite que ocurra este evento con frecuencia moderada"
                }
            }
        }
